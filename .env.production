# ============================================
# üöÄ CHATTERFY - PRODUCTION ENVIRONMENT
# ============================================

# === NODE.js ===
NODE_ENV=production

# === DATABASE (PostgreSQL) ===
DATABASE_URL=postgresql://chatterfy:YOUR_DB_PASSWORD@your-db-host:5432/chatterfy

# === REDIS (Cache & Sessions) ===
REDIS_URL=redis://your-redis-host:6379

# === API CONFIGURATION ===
API_PORT=8787
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# === FRONTEND CONFIGURATION ===
NEXT_PUBLIC_API_BASE=https://api.yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-min-32-chars

# === PROVIDER API KEYS ===
OPENAI_API_KEY=sk-your-openai-key
DEEPSEEK_API_KEY=sk-your-deepseek-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_API_KEY=your-google-api-key
OLLAMA_API_URL=http://your-ollama-host:11434

# === RATE LIMITING ===
RATE_LIMIT_RPM=120
ORG_RATE_LIMIT_RPM=600
USER_RATE_LIMIT_RPM=240

# === AWS S3 STORAGE ===
USE_S3=true
AWS_S3_BUCKET=chatterfy-production-files
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
MAX_FILE_SIZE_MB=50

# === STRIPE (LIVE MODE) ===
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === EMAIL SMTP (Production) ===
EMAIL_SERVER=smtp://apikey:your-sendgrid-api-key@smtp.sendgrid.net:587
EMAIL_FROM="Chatterfy <noreply@yourdomain.com>"

# === MONITORING & LOGGING ===
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
ENABLE_METRICS=true

# === SECURITY ===
CORS_ENABLED=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# === BACKUP & MAINTENANCE ===
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=chatterfy-backups
MAINTENANCE_MODE=false

# === ANALYTICS ===
GOOGLE_ANALYTICS_ID=G-YOUR-GA-ID
POSTHOG_API_KEY=your-posthog-key

# === PERFORMANCE ===
ENABLE_CACHING=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true

# === DOMAIN & SSL ===
DOMAIN=yourdomain.com
SSL_ENABLED=true

# ============================================
# üìù DEPLOYMENT CHECKLIST
# ============================================
# 
# ‚ñ° Configure DATABASE_URL with production PostgreSQL
# ‚ñ° Set REDIS_URL for production Redis instance  
# ‚ñ° Update ALLOWED_ORIGINS with production domains
# ‚ñ° Configure AWS S3 bucket and credentials
# ‚ñ° Set Stripe Live Mode keys
# ‚ñ° Configure production SMTP (SendGrid/Mailgun)
# ‚ñ° Set secure NEXTAUTH_SECRET (min 32 chars)
# ‚ñ° Configure Sentry for error tracking
# ‚ñ° Set up domain and SSL certificates
# ‚ñ° Test all integrations before going live
#
# ============================================