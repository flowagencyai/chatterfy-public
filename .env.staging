# ============================================
# üß™ CHATTERFY - STAGING ENVIRONMENT
# ============================================

# === NODE.js ===
NODE_ENV=staging

# === DATABASE (PostgreSQL) ===
DATABASE_URL=postgresql://chatterfy:staging_password@staging-db-host:5432/chatterfy_staging

# === REDIS (Cache & Sessions) ===
REDIS_URL=redis://staging-redis-host:6379

# === API CONFIGURATION ===
API_PORT=8787
ALLOWED_ORIGINS=https://staging.yourdomain.com,https://staging-api.yourdomain.com

# === FRONTEND CONFIGURATION ===
NEXT_PUBLIC_API_BASE=https://staging-api.yourdomain.com
NEXTAUTH_URL=https://staging.yourdomain.com
NEXTAUTH_SECRET=staging-nextauth-secret-min-32-chars

# === PROVIDER API KEYS (Test/Staging) ===
OPENAI_API_KEY=sk-your-staging-openai-key
DEEPSEEK_API_KEY=sk-your-staging-deepseek-key
ANTHROPIC_API_KEY=sk-ant-your-staging-anthropic-key
GOOGLE_API_KEY=your-staging-google-api-key
OLLAMA_API_URL=http://staging-ollama-host:11434

# === RATE LIMITING (More lenient for testing) ===
RATE_LIMIT_RPM=240
ORG_RATE_LIMIT_RPM=1200
USER_RATE_LIMIT_RPM=480

# === AWS S3 STORAGE (Staging bucket) ===
USE_S3=true
AWS_S3_BUCKET=chatterfy-staging-files
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-aws-staging-secret-key
MAX_FILE_SIZE_MB=50

# === STRIPE (TEST MODE) ===
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret

# === EMAIL SMTP (Staging - MailHog or test SMTP) ===
EMAIL_SERVER=smtp://staging:password@staging-smtp:587
EMAIL_FROM="Chatterfy Staging <staging@yourdomain.com>"

# === MONITORING & LOGGING ===
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project-id
LOG_LEVEL=debug
ENABLE_METRICS=true

# === SECURITY (Less strict for staging) ===
CORS_ENABLED=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# === ANALYTICS (Staging) ===
GOOGLE_ANALYTICS_ID=G-YOUR-STAGING-GA-ID
POSTHOG_API_KEY=your-staging-posthog-key

# === DOMAIN ===
DOMAIN=staging.yourdomain.com
SSL_ENABLED=true

