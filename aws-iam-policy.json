{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ChatterfyS3ReadWrite",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObjectVersion",
        "s3:PutObjectAcl"
      ],
      "Resource": [
        "arn:aws:s3:::chatterfy-production-files/*",
        "arn:aws:s3:::chatterfy-staging-files/*"
      ]
    },
    {
      "Sid": "ChatterfyS3ListBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetBucketVersioning"
      ],
      "Resource": [
        "arn:aws:s3:::chatterfy-production-files",
        "arn:aws:s3:::chatterfy-staging-files",
        "arn:aws:s3:::chatterfy-backups"
      ]
    },
    {
      "Sid": "ChatterfyS3BackupAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::chatterfy-backups",
        "arn:aws:s3:::chatterfy-backups/*"
      ]
    },
    {
      "Sid": "ChatterfyS3PresignedUrls",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl"
      ],
      "Resource": [
        "arn:aws:s3:::chatterfy-production-files/uploads/*",
        "arn:aws:s3:::chatterfy-staging-files/uploads/*"
      ],
      "Condition": {
        "StringEquals": {
          "s3:x-amz-acl": "private"
        }
      }
    }
  ]
}