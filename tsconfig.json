{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "packages/core/src/*"
      ],
      "@shared/*": [
        "packages/shared/src/*"
      ]
    }
  }
}